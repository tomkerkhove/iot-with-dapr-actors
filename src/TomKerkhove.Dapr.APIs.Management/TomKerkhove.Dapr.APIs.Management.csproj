  </PropertyGroup>

  <ItemGroup>
    <None Remove="Docs\TomKerkhove.Dapr.APIs.Management.Open-Api.xml" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Docs\TomKerkhove.Dapr.APIs.Management.Open-Api.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
